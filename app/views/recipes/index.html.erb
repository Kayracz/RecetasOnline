<p id="notice"><%= notice %></p>



<div class="container">
  <div class="row">
            <% @recipes.each do |recipe| %>
            <div class="col-lg-4 col-md-6 col-xs-6 recipe">
              <div class="image-wrapper">
              <%= cl_image_tag recipe.photo, height: 400, width: 400 %>
            </div>
                <h1><%= link_to recipe.title, recipe %></h1>
            </div>
             <% end %>
        </div>
      </div>


<style>

.recipe{
  background: white;
  margin-bottom: 40px;
  box-shadow: -1px 2px 9px 0px rgba(179,173,179,1);
   -webkit-transition: all .3s ease-out;
    -moz-transition: all .3s ease-out;
    -o-transition: all .3s ease-out;
    transition: all .3s ease-out;
    border-radius: 5px;
}

 .recipe:hover {
      transform: scale(1.075);
    }

.alert {
  padding: 15px;
  margin-bottom: 20px;
  border: 1px solid transparent;
  border-radius: 5px;
  background: white;
  font-weight: bold;
}

.recipe img {
  max-width: 100%;
  border-radius: 3px;
}


.recipe h1{
  font-size: 20px;
  margin-bottom: 20px;
}

  .recipe .image_wrapper {
    max-width: 100%;
    overflow: hidden;
  }
  img {
    width: 100%;
    margin-top: 10px;
  }

  h2 a{
    padding: 15px 5%;
    margin: 0;
    font-size: 20px;
    font-weight: normal;
    line-height: 1.5;
    color: red;
  }



.navbar {
  margin-bottom: 50px;
  border: none;
  }

    .navbar-brand a {
    text-transform: uppercase;
    letter-spacing: -1px;
    font-weight: bold;
    font-size: 25px;
     color:red;
  }


   .navbar-right a {
   color:gray !important;
   text-transform: none;
   font-weight:500;
    font-size: 20px;

    }

</style>
